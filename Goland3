package main

import "fmt"

func main() {
    var peso, altura float64
    
    fmt.Print("Digite seu peso (em kg): ")
    fmt.Scan(&peso)
    
    fmt.Print("Digite sua altura (em metros): ")
    fmt.Scan(&altura)
    
    imc := peso / (altura * altura)
    
    fmt.Printf("Seu IMC Ã©: %.2f\n", imc)
}
